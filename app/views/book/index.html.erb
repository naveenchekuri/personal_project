<% if @book.blank? %>
<p>There are not any books currently in the system.</p>
<% else %>
<p>These are the current books in our system</p>
<ul id="book">
<% @book.each do |c| %>
<li><%= link_to c.title, :action => 'show', :id => c.id %> </li>
<% end %>
</ul>
<% end %>
<p><%= link_to "Add new Book", new_book_path %></p>
